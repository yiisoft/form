{
    "name": "yiisoft/form",
    "type": "library",
    "description": "The package helps with implementing data entry forms.",
    "keywords": [
        "yii",
        "form"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/form/issues?state=open",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "ircs://irc.libera.chat:6697/yii",
        "chat": "https://t.me/yii3en",
        "source": "https://github.com/yiisoft/form"
    },
    "require": {
        "php": "8.1 - 8.4",
        "yiisoft/friendly-exception": "^1.0",
        "yiisoft/html": "^3.8",
        "yiisoft/widget": "^2.2"
    },
    "require-dev": {
        "infection/infection": "^0.26.21 || ^0.29.14",
        "maglnet/composer-require-checker": "^4.7.1",
        "phpunit/phpunit": "^10.5.45",
        "rector/rector": "^2.0.10",
        "spatie/phpunit-watcher": "^1.24",
        "vimeo/psalm": "^5.26.1 || ^6.9.4"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Form\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Form\\Tests\\": "tests"
        }
    },
    "extra": {
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "params": "params.php",
            "bootstrap": "bootstrap.php"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
